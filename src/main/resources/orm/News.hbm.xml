<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.epam.newsmanagement.entity.News" table="NEWS">
        <id name="id" type="long">
            <column name="news_id"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">none</param>
                <param name="increment_size">1</param>
                <param name="sequence_name">NEWS_SEQUENCE</param>
            </generator>
        </id>
        <property name="title" type="string">
            <column name="news_title" length="100" not-null="true"/>
        </property>
        <property name="date" type="date">
            <column name="news_date" not-null="true"/>
        </property>
        <property name="brief" type="string" length="500">
            <column name="news_brief" not-null="true"/>
        </property>
        <property name="content" type="string" length="2048">
            <column name="news_content" not-null="true"/>
        </property>
        <property name="username" type="string" length="100">
            <column name="news_username" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>